#!/bin/bash

function setdef {
    if [ "$1" -eq "1" ]
    then
        sed -i '' "s/$2/$3/g" main.h
    else
        sed -i '' "s/$2/MISSING_INPUT/g" main.h
    fi
}

source parameters.sh

cp main_template.h main.h

sed -i '' "s;_PATH_;${DATAPATH};g" main.h
sed -i '' "s;_IPATH_;${INITIAL_DATAPATH};g" main.h
sed -i '' "s/_IC_/${INITIAL_CONDITIONS}/g" main.h
sed -i '' "s/_PM_/${PSI_METHOD}/g" main.h
sed -i '' "s/_M_/${MASS}/g" main.h
sed -i '' "s/_A_/${A_INITIAL}/g" main.h
sed -i '' "s/_TF_/${FINAL_TIME}/g" main.h
sed -i '' "s/_GPX_/${GRIDPOINTS_X}/g" main.h
sed -i '' "s/_GPY_/${GRIDPOINTS_Y}/g" main.h
sed -i '' "s/_GPZ_/${GRIDPOINTS_Z}/g" main.h
sed -i '' "s/_LX_/${SPATIAL_LOWER_BOUND_X}/g" main.h
sed -i '' "s/_LY_/${SPATIAL_LOWER_BOUND_Y}/g" main.h
sed -i '' "s/_LZ_/${SPATIAL_LOWER_BOUND_Z}/g" main.h
sed -i '' "s/_UX_/${SPATIAL_UPPER_BOUND_X}/g" main.h
sed -i '' "s/_UY_/${SPATIAL_UPPER_BOUND_Y}/g" main.h
sed -i '' "s/_UZ_/${SPATIAL_UPPER_BOUND_Z}/g" main.h

sed -i '' "s/_MINFL_/${INFLATON_MASS}/g" main.h
sed -i '' "s/_MKARSTEN_/${MASS_KARSTEN}/g" main.h
sed -i '' "s/_BUF_/${WRITE_OUT_BUFFER_NUMBER}/g" main.h
sed -i '' "s/_ONUM_/${OUTPUT_NUMBER}/g" main.h
sed -i '' "s/_BINS_/${POWER_SPECTRUM_BINS}/g" main.h
sed -i '' "s/_TSKIP_/${TIME_STEP_SKIPS}/g" main.h
sed -i '' "s/_XSKIP_/${STRIDE_X}/g" main.h
sed -i '' "s/_YSKIP_/${STRIDE_Y}/g" main.h
sed -i '' "s/_ZSKIP_/${STRIDE_Z}/g" main.h
sed -i '' "s/_RELTOL_/${RELATIVE_TOLERANCE}/g" main.h
sed -i '' "s/_ABSTOL_/${ABSOLUTE_TOLERANCE}/g" main.h
sed -i '' "s/_HFRAC_/${MAX_DT_HUBBLE_FRACTION}/g" main.h
sed -i '' "s/_THREADS_/${THREAD_NUMBER}/g" main.h
sed -i '' "s/_FFTW_/${FFTW_DEFAULT_FLAG}/g" main.h
sed -i '' "s/_VC_/${VERSION_CONTROL}/g" main.h

sed -i '' "s/_IM_/${INTEGRATION_METHOD}/g" main.h
sed -i '' "s/_TI_/${INITIAL_TIME}/g" main.h
sed -i '' "s/_DELT_/${DELTA_T}/g" main.h
sed -i '' "s/_MINDELT_/${MINIMAL_DELTA_T}/g" main.h
sed -i '' "s/_MAXSTEPS_/${MAX_STEPS}/g" main.h
sed -i '' "s/_MINSCAL_/${SMALLEST_SCALING}/g" main.h
sed -i '' "s/_MAXSCAL_/${LARGEST_SCALING}/g" main.h
sed -i '' "s/_BETA_/${BETA}/g" main.h
sed -i '' "s/_SAFE_/${SAFE}/g" main.h
sed -i '' "s/_SEED_/${SEED}/g" main.h
sed -i '' "s/_COUPLING_/${COUPLING}/g" main.h
sed -i '' "s/_LAMBDA_/${LAMBDA}/g" main.h

setdef ${ENABLE_FFT_FILTER} "_FILTER_" "ENABLE_FFT_FILTER"
setdef ${EVOLVE_WITHOUT_PSI} "_WOPSI_" "EVOLVE_WITHOUT_PSI"

setdef ${PHI} "_OPHI_" "OUTPUT_PHI"
setdef ${DPHI} "_ODPHI_" "OUTPUT_DPHI"
setdef ${PSI} "_OPSI_" "OUTPUT_PSI"
setdef ${DPSI} "_ODPSI_" "OUTPUT_DPSI"
setdef ${RHO} "_ORHO_" "OUTPUT_RHO"

setdef ${PHI_SUMMARY} "_OPHIS_" "OUTPUT_PHI_SMRY"
setdef ${DPHI_SUMMARY} "_ODPHIS_" "OUTPUT_DPHI_SMRY"
setdef ${PSI_SUMMARY} "_OPSIS_" "OUTPUT_PSI_SMRY"
setdef ${DPSI_SUMMARY} "_ODPSIS_" "OUTPUT_DPSI_SMRY"
setdef ${RHO_SUMMARY} "_ORHOS_" "OUTPUT_RHO_SMRY"

setdef ${PHI_POWER_SPECTRUM} "_OPHIPS_" "OUTPUT_PHI_PS"
setdef ${PSI_POWER_SPECTRUM} "_OPSIPS_" "OUTPUT_PSI_PS"
setdef ${RHO_POWER_SPECTRUM} "_ORHOPS_" "OUTPUT_RHO_PS"

setdef ${CONSTRAINTS} "_OCSTR_" "OUTPUT_CONSTRAINTS"
